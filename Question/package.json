  "license": "ISC",
  "scripts": {
    "dev": "cross-env PORT=5000 NODE_ENV=development BABEL_ENV=development webpack-dev-server --hot --mode development --host 0.0.0.0",
    "test": "jest --env=jsdom --testResultsProcessor=\"jest-junit\"",
    "build": "webpack --mode production",
    "json-server" : "cd src/api && json-server --watch db.json",
    "start": "concurrently \"npm run json-server\" \"npm run dev\""
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/src/tests/styleMock.js"
    }
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": ".",
    "outputName": "xunittest-report.xml",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "bootstrap": "^5.1.3",
    "json-server": "^0.17.0",
    "msw": "^0.38.1",
    "node-fetch": "^3.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
