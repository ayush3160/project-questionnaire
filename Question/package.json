    "@babel/preset-react": "^7.16.7",
    "@babel/runtime-corejs3": "^7.16.8",
    "babel-loader": "^8.2.3",
    "core-js": "^3.20.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "ejs-loader": "^0.5.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.4.7",
    "jest-junit": "^13.0.0",
    "prettier": "^2.5.1",
    "style-loader": "^3.3.1",
    "svg-url-loader": "^7.1.1",
